<section id="product-details">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-6 img-preview">
                <img src="<%= product.image %>" class="img-responsive" alt="<%= product.name %>" /></div>
            <div class="col-xs-12 col-md-6 product-info">
                <h2 class="upper"><%= product.name %></h2>
                <div class="pay-info">
                    <p><strong>R$<%= product.sales_price %></strong></p>
                </div>
                <div class="other-info">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <label for="" class="form-control">Enable:<span><%= (product.enable) ? 'Yes' : 'No' %></span></label>
                        </li>
                    </ul>
                </div>
                <div class="pay-action">
                    <form method="POST" action="/cart">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <input type="hidden" name="slug" value="<%= product.slug %>">
                        <button class="btn btn-block btn-red-default uppercase btn-add-cart" type="submit">Add to cart</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 description">
                <h4 class="title upper">Details</h4>
                <hr>
                <span><%= product.desc %></span>
            </div>
        </div>
    </div>
</section>